
<div class="row pt-2">
    <div class="col-11">
        <a asp-controller="GroupManagement" asp-action="Index">分组列表</a><span>></span>创建分组
    </div>
</div>

<div class="row pt-2">
    <div class="col-12">
        <form class="needs-validation" novalidate="" enctype="multipart/form-data">
            <div class="row pt-2">
                <div class="col-12">
                    <label for="GroupName" class="form-label">分组名称<span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="GroupName" name="GroupName" value="AAAAA" required>
                    <div class="invalid-feedback">
                        请输入分组名称
                    </div>
                </div>
            </div>
            <div class="row pt-2">
                <div class="col-12">
                    <label for="Description" class="form-label">描述<span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="Description" name="Description" value="BBBB" required>
                    <div class="invalid-feedback">
                        请输入分组描述
                    </div>
                </div>
            </div>
            <div class="row pt-3 mb-3">
                <div class="col-1 mx-auto">
                    <button class="w-100 btn btn-primary btn-lg" type="submit">确定</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{

    <script>
        var addGroupUrl = '@Url.Action("AddGroup", "GroupManagement")';
        var GroupListUrl = '@Url.Action("Index", "GroupManagement")';
    </script>
    <script src="~/js/GroupManagement/add_group.js"></script>



}